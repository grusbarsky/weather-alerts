{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userEdit.json",
    "type": "object",
    "properties": {
      "password": {
        "type": "string",
        "minLength": 5
      },
      "firstName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 15
      },
      "lastName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 25
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "enableAlerts": {
        "type": "boolean"
      }
    },
    "additionalProperties": false,
    "required": []
  }