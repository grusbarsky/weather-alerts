{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 1,
        "maxLength": 15
      },
      "password": {
        "type": "string",
        "minLength": 5
      },
      "firstName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 15
      },
      "lastName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 25
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "enableAlerts":{
        "type":"boolean"
      }
    },
    "additionalProperties": false,
    "required": [
      "username",
      "firstName",
      "lastName",
      "password",
      "email",
      "enableAlerts"
    ]
  }